<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="de.heinerion.randomnamegenerator.userinterfaces.javafx.GeneratorController"
          stylesheets="de/heinerion/randomnamegenerator/userinterfaces/javafx/style.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Text id="welcome-text" text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
    <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <ComboBox fx:id="genderBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Number of forenames:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Spinner fx:id="forenameSpinner" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="10"/>
        </valueFactory>
    </Spinner>
    <Label text="Number of surnames:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Spinner fx:id="surnameSpinner" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory min="0" max="10"/>
        </valueFactory>
    </Spinner>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleSubmitButtonAction" text="Generate"/>
    </HBox>
    <Text fx:id="result" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>